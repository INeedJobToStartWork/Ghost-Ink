{
	"name": "@packages/core",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"------------------------INSTALLATION-------------------": "",
		"prepare": "",
		"pre": "git add . && npx lint-staged",
		"link-cli": "pnpm link --global",
		"------------------------UTILS--------------------------": "",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "pnpm prettier . --write && pnpm prettier . --check",
		"------------------------BUILDS-------------------------": "",
		"build:dev": "pnpm tsdown --config ./config/tsdownrc/tsdown.dev.ts",
		"build:prod": "pnpm tsdown --config ./config/tsdownrc/tsdown.prod.ts",
		"build:npm": "pnpm npm:prepack && pnpm tsdown --config ./config/tsdownrc/tsdown.prod.ts && pnpm npm:postpack",
		"------------------------DEPLOYS------------------------": "",
		"npm:prepack": "clean-package",
		"npm:postpack": "clean-package restore",
		"------------------------TESTS--------------------------": "",
		"test": "vitest",
		"test:coverage": "vitest --coverage",
		"------------------------NPM--------------------------": "",
		"prepublishOnly": "pnpm build:npm"
	},
	"dependencies": {
		"ink": "^5.2.1",
		"oh-my-error": "^2.0.2",
		"react": "^18"
	},
	"devDependencies": {
		"@ineedj/eslintrc": "1.2.3",
		"@ineedj/prettierrc": "3.0.0",
		"@ineedj/tsconfig": "^1.0.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/ink": "^2.0.3",
		"@types/node": "^22.15.3",
		"@types/react": "^19.1.5",
		"@types/react-dom": "^19.2.1",
		"clean-package": "^2.2.0",
		"eslint": "^8.57.1",
		"ink-testing-library": "^4.0.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.4.2",
		"react-dom": "^18.3.1",
		"react-test-renderer": "^19.1.0",
		"rollup-plugin-copy": "^3.5.0",
		"tsdown": "^0.15.6",
		"typescript": "^5.6.3",
		"vitest": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"@packages/test-utils": "workspace:*",
		"@configs/vitest": "workspace:*"
	},
	"publishConfig": {
		"access": "public",
		"directory": "dist",
		"provenance": true,
		"tag": "latest"
	}
}
